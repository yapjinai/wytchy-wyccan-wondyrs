<h1>Item page for <%= @item.name %></h1>

<h3>Spells that use <%= @item.name %>:</h3>

<ul>
  <% @item.spells.each do |s| %>
  <li>
    <%= link_to s.name, s %>
  </li>
  <% end %>
</ul>

<h3>
  <%= @item.name %> costs <%= pluralize(@item.price, "token") %>. <%= button_to "Purchase?", purchase_path, params: {item_id: @item.id} %>

</h3>
