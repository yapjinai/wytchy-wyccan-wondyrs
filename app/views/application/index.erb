<h1>Welcome to Wytchy Wyccan Wondyrs!</h1>

<%= link_to "New user", new_user_path %><br>

Log in: <br>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %><br>
  <% end %>
<% end %>

<%= form_tag controller: 'users', action: 'login', method: :post do %>
  <p><%= text_field_tag :username, nil, placeholder: 'Username' %></p>
  <p><%= password_field_tag :password, nil, placeholder: 'Password' %></p>
  <%= submit_tag "Login" %>
<% end %>
