<!DOCTYPE html>
<html>
  <head>
    <title>WytchyWyccanWondyrs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('favicon.png') %>

  </head>

  <body>
    <% if session[:user_id] %>
      <div class="user-nav">
        <%= render 'users/userinfo' %>
      </div>
    <% end %>

    <% if flash[:spell] %>
    <div class="flashy-spell">
      <%= flash[:spell] %><br>
      <%= link_to "ðŸ”®", home_path %>
    </div>
    <% end %>

    <main>

      <% if flash[:notice] || flash[:error] || flash[:discovery] %>
      <div class="notifications">
        <!-- <% if flash[:spell] %> -->
        <!-- <div class="flash-spell"> -->
          <!-- <%= flash[:spell] %> -->
        <!-- </div> -->
        <!-- <% end %> -->

        <% if flash[:notice] %>
          <div class="flash-notice">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:error] %>
        <div class="flash-error">
          <%= flash[:error] %>
        </div>
        <% end %>

        <% if flash[:discovery] %>
        <div class="flash-discovery">
          <%= flash[:discovery] %>
        </div>
        <% end %>

      </div>
      <% end %>
      <% if !@disable_breadcrumbs %>
        <div class="bordered-div">
          <%= render "breadcrumbs" %>
        </div>
      <% end %>

      <div class="bordered-div">
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </main>


  </body>
</html>
