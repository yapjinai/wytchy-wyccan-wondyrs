<h1>
  Create a new user
</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :gender %>
  <%= f.select :gender, [['Sorceress'], ['Warlock'], ['Otherkin']] %><br>

  <%= f.label :birthday %>
  <%= f.date_field :birthday %><br>

  <%= f.label :bloodtype %>
  <%= f.select :bloodtype, [['A'], ['B'], ['AB'], ['O']] %><br>

  <br><%= f.submit "Sign up!" %>
<% end %>
